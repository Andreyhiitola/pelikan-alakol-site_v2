// ========================================
// –†–ï–ù–î–ï–†–ò–ù–ì ACCOMMODATION (–ù–û–ú–ï–†–ê)
// ========================================

function renderAccommodation(data) {
  console.log('üìå renderAccommodation –≤—ã–∑–≤–∞–Ω–∞ —Å –¥–∞–Ω–Ω—ã–º–∏:', data);
  
  const container = document.getElementById('roomsContainer');
  
  if (!container) {
    console.error('‚ùå –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä roomsContainer –Ω–µ –Ω–∞–π–¥–µ–Ω');
    return;
  }

  if (!data) {
    console.error('‚ùå data is null –∏–ª–∏ undefined');
    return;
  }

  // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –≥–¥–µ –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –º–∞—Å—Å–∏–≤ –Ω–æ–º–µ—Ä–æ–≤
  let accommodations = null;
  
  if (Array.isArray(data)) {
    // –ï—Å–ª–∏ —Å–∞–º–∏ –¥–∞–Ω–Ω—ã–µ —ç—Ç–æ –º–∞—Å—Å–∏–≤
    accommodations = data;
  } else if (data.accommodations && Array.isArray(data.accommodations)) {
    // –ï—Å–ª–∏ –º–∞—Å—Å–∏–≤ –≤ —Å–≤–æ–π—Å—Ç–≤–µ accommodations
    accommodations = data.accommodations;
  } else {
    console.error('‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –Ω–∞–π—Ç–∏ –º–∞—Å—Å–∏–≤ accommodations. –°—Ç—Ä—É–∫—Ç—É—Ä–∞ data:', Object.keys(data));
    return;
  }

  if (!accommodations || accommodations.length === 0) {
    console.error('‚ùå –ú–∞—Å—Å–∏–≤ accommodations –ø—É—Å—Ç');
    return;
  }

  // –û—á–∏—â–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
  container.innerHTML = '';

  // –†–µ–Ω–¥–µ—Ä–∏–Ω–≥ –∫–∞–∂–¥–æ–≥–æ –Ω–æ–º–µ—Ä–∞
  accommodations.forEach((room, index) => {
    const roomCard = document.createElement('div');
    roomCard.className = 'scroll-item';
    
    // –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ –ø–æ–ª—É—á–µ–Ω–∏–µ —Å–≤–æ–π—Å—Ç–≤
    const icon = room.icon || 'üè†';
    const name = room.name || '–ù–æ–º–µ—Ä';
    const description = room.description || '';
    const price = room.price || '–£—Ç–æ—á–Ω—è–π—Ç–µ';
    const image = room.image || '';
    const amenities = room.amenities || [];

    roomCard.innerHTML = `
      <div class="photo-overlay"><i class="fas fa-expand"></i></div>
      ${image ? `<img src="${image}" alt="${name}" style="height: 250px; object-fit: cover;">` : '<img src="https://via.placeholder.com/400x250?text=Room&w=400&h=250" style="height: 250px; object-fit: cover;">'}
      <h3>${icon} ${name}</h3>
      <p>${description}</p>
      ${amenities.length > 0 ? `
        <ul class="infra-features">
          ${amenities.map(a => `<li>‚úì ${a}</li>`).join('')}
        </ul>
      ` : ''}
      <p><strong style="color: var(--primary-green); font-size: 1.1em;">–æ—Ç ${price} / –Ω–æ—á—å</strong></p>
    `;
    
    container.appendChild(roomCard);
  });

  console.log(`‚úÖ Accommodation: –∑–∞–≥—Ä—É–∂–µ–Ω–æ ${accommodations.length} –Ω–æ–º–µ—Ä–æ–≤`);
}

// –≠–∫—Å–ø–æ—Ä—Ç —Ñ—É–Ω–∫—Ü–∏–∏
window.renderAccommodation = renderAccommodation;
