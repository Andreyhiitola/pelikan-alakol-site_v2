// ========================================
// –†–ï–ù–î–ï–†–ò–ù–ì ACCOMMODATION (–ù–û–ú–ï–†–ê)
// ========================================

function renderAccommodation(data) {
  const container = document.getElementById('roomsContainer');
  
  // –®–∞–≥ 1: –ü—Ä–æ–≤–µ—Ä—è–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
  if (!container) {
    console.error('‚ùå –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä roomsContainer –Ω–µ –Ω–∞–π–¥–µ–Ω');
    return;
  }

  // –®–∞–≥ 2: –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–∞–Ω–Ω—ã–µ
  if (!data) {
    console.error('‚ùå –ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –¥–ª—è accommodation');
    return;
  }

  // –®–∞–≥ 3: –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Ñ–æ—Ä–º–∞—Ç –¥–∞–Ω–Ω—ã—Ö
  // –ú–æ–∂–µ—Ç –±—ã—Ç—å: {accommodations: [...]} –∏–ª–∏ –ø—Ä–æ—Å—Ç–æ [...]
  let rooms;
  
  if (Array.isArray(data)) {
    rooms = data; // –ï—Å–ª–∏ —ç—Ç–æ —É–∂–µ –º–∞—Å—Å–∏–≤
  } else if (data.accommodations && Array.isArray(data.accommodations)) {
    rooms = data.accommodations; // –ï—Å–ª–∏ —ç—Ç–æ –æ–±—ä–µ–∫—Ç —Å –º–∞—Å—Å–∏–≤–æ–º
  } else {
    console.error('‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –¥–∞–Ω–Ω—ã—Ö accommodation');
    return;
  }

  // –®–∞–≥ 4: –ü—Ä–æ–≤–µ—Ä—è–µ–º –µ—Å—Ç—å –ª–∏ –Ω–æ–º–µ—Ä–∞
  if (rooms.length === 0) {
    console.error('‚ùå –ù–µ—Ç –Ω–æ–º–µ—Ä–æ–≤ –≤ –¥–∞–Ω–Ω—ã—Ö');
    return;
  }

  // –®–∞–≥ 5: –†–µ–Ω–¥–µ—Ä–∏–Ω–≥
  container.innerHTML = rooms.map(room => `
    <div class="scroll-item">
      <div class="photo-overlay"><i class="fas fa-expand"></i></div>
      ${room.image ? `<img src="${room.image}" alt="${room.name}" style="height: 250px; object-fit: cover;">` : '<img src="https://via.placeholder.com/400x250?text=Room" style="height: 250px; object-fit: cover;">'}
      <h3>${room.icon || 'üè†'} ${room.name}</h3>
      <p>${room.description}</p>
      ${room.amenities && room.amenities.length > 0 ? `
        <ul class="infra-features">
          ${room.amenities.map(a => `<li>‚úì ${a}</li>`).join('')}
        </ul>
      ` : ''}
      <p><strong style="color: var(--primary-green); font-size: 1.1em;">–æ—Ç ${room.price} / –Ω–æ—á—å</strong></p>
    </div>
  `).join('');

  console.log(`‚úÖ Accommodation –∑–∞–≥—Ä—É–∂–µ–Ω—ã –∏ –æ—Ç—Ä–∏—Å–æ–≤–∞–Ω—ã (${rooms.length} –Ω–æ–º–µ—Ä–æ–≤)`);
}

// –≠–∫—Å–ø–æ—Ä—Ç —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –≤ main.js
window.renderAccommodation = renderAccommodation;
